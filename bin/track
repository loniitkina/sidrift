# vim: filetype=python

from datetime import datetime
from sidrift.track import backtrack
import os
import typer


app = typer.Typer()

@app.command()
def track(
            start_date: datetime = typer.Argument(..., help="Start date for backtracking"),
            lon_0: float = typer.Argument(..., help="Longitude of mooring/end position"),
            lat_0: float = typer.Argument(..., help="Latitude of mooring/end position"),
            output: str = typer.Argument(..., help="Destination path for results"),
            min_ice_conc: int = typer.Option(70, help="Minimum ice concentration"),
            search_radius: int = typer.Option(100, help="Search radius for OSI-SAF drift (in km)"),
         ):
        if os.path.exists(output):
            os.remove(output)
        backtrack(start_date, lon_0, lat_0, min_ice_conc, search_radius, output)

if __name__ == "__main__":
    app()
